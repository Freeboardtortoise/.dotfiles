	echo "Installing packages..."

sudo pacman -S -q --noconfirm --needed hyprlock
sudo pacman -S -q --noconfirm --needed hyprpaper
sudo pacman -S -q --noconfirm --needed waybar
sudo pacman -S -q --noconfirm --needed kitty
sudo pacman -S -q --noconfirm --needed wofi
sudo pacman -S -q --noconfirm --needed helix
sudo pacman -S -q --noconfirm --needed vim
sudo pacman -S -q --noconfirm --needed dolphin
sudo pacman -S -q --noconfirm --needed git btop
sudo pacman -S -q --noconfirm --needed dust firewalld
sudo pacman -S -q --noconfirm --needed ipset
sudo pacman -S -q --noconfirm --needed ttf-font-awesome ttf-firacode-nerd
sudo pacman -S -q --noconfirm --needed lib32-nvidia-utils egl-wayland nvidia
sudo pacman -S -q --noconfirm --needed nvidia-settings curl


#installing p10k

git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ~/.local/share/powerlevel10k


echo "Copying Hyprland-related config files..."
mkdir -p ~/.config/hypr
cp ~/.dotfiles/hypr/hyprland.conf ~/.config/hypr/
cp ~/.dotfiles/hypr/hyprpaper.conf ~/.config/hypr/
cp ~/.dotfiles/hypr/hyprlock.conf ~/.config/hypr/

echo "Setting up Waybar config..."
mkdir -p ~/.config/waybar
cp ~/.dotfiles/waybar/config.jsonc ~/.config/waybar/
cp ~/.dotfiles/waybar/style.css ~/.config/waybar/

echo "Setting up Ghostty config..."
mkdir -p ~/.config/ghostty
cp -f ~/.dotfiles/ghostty/config ~/.config/ghostty/config

echo "setting up Kirry config"
mkdir -p ~/.config/kitty
cp -f ~/.dotfiles/kitty.con ~/.config/kitty/

echo "Installing yay..."
sudo pacman -S -q --needed base-devel --noconfirm
[ -d yay ] || git clone https://aur.archlinux.org/yay.git
cd yay && makepkg -si --noconfirm --needed
cd ~

echo "Installing zen browser via yay..."
yay -S zen-browser-bin

echo "Installing Homebrew..."
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

echo "Installing OBS dependencies..."
sudo pacman -S --noconfirm pipewire xdg-desktop-portal xdg-desktop-portal-wlr qt5-wayland qt5ct

echo "Copying homescreen and lockscreen..."
mkdir -p ~/Photos
cp ~/.dotfiles/home_screen.png ~/Photos/
cp ~/.dotfiles/lockscreen.png ~/Photos/

echo "Enabling firewall..."
sudo systemctl enable --now firewalld

echo "Setting up Vim..."
curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
cp ~/.dotfiles/.vimrc ~/
cp ~/.dotfiles/.vimrc.plug ~/
mkdir -p ~/.vim/plug ~/.vim/plugged ~/.vim/autoload



echo "setting up wofi and coppying configs..."
cp -r ~/.dotfiles/wofi ~/.config/


# adding the hyprland to the startup list
cp ~/.dotfiles/.bash_profile ~/
# rm -rf ~/.dotfiles
